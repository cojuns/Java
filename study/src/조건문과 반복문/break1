class Ex4_16 {
	public static void main(String[] args) { 
		int sum = 0;
		int i   = 0;
			// while문은 true 생략불가, for문 생략 가능
		while(true) { //<-무한 반복문 ( for문 반복문->for(;;){} )
			if(sum > 100)
				break; // 조건이 완료되면 반복문을 벗어난다.(자신이 속한 하나의 반복문 )
			++i;
			sum += i;
		} // end of while

		System.out.println("i=" + i);
		System.out.println("sum=" + sum);
	}   
}
